{% extends 'base.html.twig' %}

{% block body %}
    <h1>Link</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ link.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ link.name }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ link.category }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ link.author }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ link.url }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if link.createdAt %}{{ link.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('link_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('link_edit', { 'id': link.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
